{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SAPF",
  "scopeName": "source.sapf",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.semicolon.sapf",
          "match": ";.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sapf",
          "match": "\\b[a-zA-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}