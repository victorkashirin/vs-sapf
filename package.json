{
  "name": "vsapf",
  "displayName": "SAPF Language",
  "description": "SAPF language support",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "publisher": "victorkashirin",
  "icon": "images/vsapf.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vsapf.evalLine",
        "title": "SAPF: Evaluate Current Line"
      },
      {
        "command": "vsapf.stop",
        "title": "SAPF: Stop sound"
      }
    ],
    "keybindings": [
      {
        "command": "vsapf.evalLine",
        "key": "shift+enter",
        "when": "editorTextFocus && editorLangId == sapf"
      },
      {
        "command": "vsapf.stop",
        "key": "ctrl+.",
        "mac": "cmd+.",
        "when": "editorTextFocus && editorLangId == sapf"
      }
    ],
    "languages": [
      {
        "id": "sapf",
        "aliases": [
          "SAPF"
        ],
        "extensions": [
          ".sapf"
        ],
        "configuration": "./sapf-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sapf",
        "scopeName": "source.sapf",
        "path": "./syntaxes/sapf.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "SAPF Evaluator Configuration",
      "properties": {
        "vsapf.binaryPath": {
          "type": "string",
          "default": "/usr/local/bin/sapf",
          "description": "Path to the sapf evaluator binary"
        },
        "vsapf.binaryArgs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Arguments passed to the evaluator binary"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "npx vsce package --allow-missing-repository"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}